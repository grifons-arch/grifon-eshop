<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Grifon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/grifon_charcoal</item>
        <item name="colorPrimaryVariant">@color/grifon_ink</item>
        <item name="colorOnPrimary">@color/grifon_sand</item>
        <item name="colorSecondary">@color/grifon_gold</item>
        <item name="colorOnSecondary">@color/grifon_ink</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/grifon_charcoal</item>
    </style>

    <style name="GrifonIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textColor">@color/grifon_sand</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GrifonChip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/bg_chip</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">@color/grifon_sand</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="GrifonHighlight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="GrifonHighlightTitle">
        <item name="android:textColor">@color/grifon_sand</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="GrifonHighlightBody">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">@color/grifon_muted</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="GrifonCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_card_light</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="GrifonCardTitle">
        <item name="android:textColor">@color/grifon_ink</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="GrifonCardSubtitle">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/grifon_dark_muted</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GrifonBrand">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:background">@drawable/bg_brand</item>
        <item name="android:paddingHorizontal">18dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textColor">@color/grifon_sand</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="GrifonFooterItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/grifon_sand</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
