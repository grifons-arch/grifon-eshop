<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Grifon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/grifon_charcoal</item>
        <item name="colorPrimaryVariant">@color/grifon_ink</item>
        <item name="colorOnPrimary">@color/grifon_sand</item>
        <item name="colorSecondary">@color/grifon_gold</item>
        <item name="colorOnSecondary">@color/grifon_ink</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/grifon_charcoal</item>
    </style>

    <style name="GrifonMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">@color/grifon_sand</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@color/grifon_surface</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="GrifonFooterItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/grifon_sand</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
